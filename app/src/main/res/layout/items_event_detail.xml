<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/items_details_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/homeTeamImage"
        android:layout_width="@dimen/team_image_size"
        android:layout_height="@dimen/team_image_size"
        android:layout_marginStart="@dimen/card_view_player_details_height"
        android:layout_marginTop="@dimen/team_image_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/awayTeamImage"
        android:layout_width="@dimen/team_image_size"
        android:layout_height="@dimen/team_image_size"
        android:layout_marginTop="@dimen/team_image_margin"
        android:layout_marginEnd="@dimen/card_view_player_details_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scroll_view_size"
        android:hint="@string/date"
        android:textSize="@dimen/text_size_live"
        app:layout_constraintEnd_toStartOf="@+id/awayTeamImage"
        app:layout_constraintStart_toEndOf="@+id/homeTeamImage"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_margin"
        android:hint="@string/date"
        android:visibility="invisible"
        android:textSize="@dimen/text_size_live"
        app:layout_constraintEnd_toStartOf="@+id/awayTeamImage"
        app:layout_constraintStart_toEndOf="@+id/homeTeamImage"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/homeTeamSet"
        android:layout_width="@dimen/scroll_view_size"
        android:layout_height="@dimen/scroll_view_size"
        android:layout_marginStart="@dimen/team_image_margin"
        android:hint="@string/zero"
        android:textSize="@dimen/set_text_size"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/homeTeamImage"
        app:layout_constraintStart_toEndOf="@+id/homeTeamImage"
        app:layout_constraintTop_toTopOf="@+id/homeTeamImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/awayTeamSet"
        android:layout_width="@dimen/scroll_view_size"
        android:layout_height="@dimen/scroll_view_size"
        android:layout_marginEnd="@dimen/team_image_margin"
        android:hint="@string/zero"
        android:textAlignment="center"
        android:textSize="@dimen/set_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/homeTeamImage"
        app:layout_constraintEnd_toStartOf="@+id/awayTeamImage"
        app:layout_constraintTop_toTopOf="@+id/homeTeamImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/team_image_margin"
        android:text="@string/dash"
        android:textAlignment="center"
        android:textSize="@dimen/dash_size"
        app:layout_constraintEnd_toStartOf="@+id/awayTeamSet"
        app:layout_constraintStart_toEndOf="@+id/homeTeamSet"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/homeTeamGamePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_stats_name"
        android:layout_marginEnd="@dimen/game_point_margin"
        android:textSize="@dimen/game_point_text_size"
        android:textAlignment="center"
        android:hint="@string/zero"
        app:layout_constraintEnd_toStartOf="@+id/homeTeamSet"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamSet" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/awayTeamGamePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tv_player_details_margin_start"
        android:layout_marginTop="@dimen/margin_stats_name"
        android:hint="@string/zero"
        android:textSize="@dimen/game_point_text_size"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/homeTeamGamePoint"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamSet" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/colon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/colon_margin"
        android:hint="@string/colon"
        android:textSize="@dimen/colon_text_size"
        app:layout_constraintEnd_toStartOf="@+id/awayTeamGamePoint"
        app:layout_constraintStart_toEndOf="@+id/homeTeamGamePoint"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamSet" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/homeTeamGamePointCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/team_game_point_margin"
        android:layout_marginTop="@dimen/margin_stats_name"
        android:hint="@string/zero"
        android:textAlignment="center"
        android:textSize="@dimen/game_point_text_size"
        app:layout_constraintStart_toEndOf="@+id/homeTeamGamePoint"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamSet" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/awayTeamGamePointCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/scroll_view_size"
        android:layout_marginTop="@dimen/margin_stats_name"
        android:hint="@string/point"
        android:textSize="@dimen/game_point_text_size"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/homeTeamGamePoint"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamSet" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/colonPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/colon_margin"
        android:hint="@string/colon"
        android:textSize="@dimen/colon_text_size"
        app:layout_constraintEnd_toStartOf="@+id/homeTeamGamePointCurrent"
        app:layout_constraintStart_toEndOf="@+id/awayTeamGamePointCurrent"
        app:layout_constraintTop_toBottomOf="@+id/awayTeamSet" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/homeTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_start"
        android:hint="@string/player_name"
        app:layout_constraintEnd_toEndOf="@+id/homeTeamImage"
        app:layout_constraintStart_toStartOf="@+id/homeTeamImage"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/awayTeamName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_start"
        android:hint="@string/player_name"
        app:layout_constraintEnd_toEndOf="@+id/awayTeamImage"
        app:layout_constraintStart_toStartOf="@+id/awayTeamImage"
        app:layout_constraintTop_toBottomOf="@+id/awayTeamImage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/homeTeamRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_stats_name"
        android:hint="@string/ranking_number"
        app:layout_constraintEnd_toEndOf="@+id/homeTeamName"
        app:layout_constraintStart_toStartOf="@+id/homeTeamName"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamName" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/awayTeamRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_stats_name"
        android:hint="@string/ranking_number"
        app:layout_constraintEnd_toEndOf="@+id/awayTeamName"
        app:layout_constraintStart_toStartOf="@+id/awayTeamName"
        app:layout_constraintTop_toBottomOf="@+id/awayTeamName" />

</androidx.constraintlayout.widget.ConstraintLayout>

